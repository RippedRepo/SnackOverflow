@{
    ViewData["Title"] = "Welcome to Recipe Paradise!";
}

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-light p-5 rounded-3">
        <h1 class="display-4">Welcome to Recipe Paradise! 🍲</h1>
        <p class="lead">Discover, share, and enjoy recipes from around the world.</p>
        <a href="#" class="btn btn-primary btn-lg">Get Started</a>
    </div>

    <!-- Features Section -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Discover Recipes</h5>
                    <p class="card-text">Browse a collection of delicious recipes handpicked for you!</p>
                    <a href="#" class="btn btn-outline-primary">Explore</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Share Your Favorites</h5>
                    <p class="card-text">Add and share your favorite recipes with others.</p>
                    <a href="#" class="btn btn-outline-success">Share Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Save Your Recipes</h5>
                    <p class="card-text">Save your favorite recipes and access them anytime!</p>
                    <a href="#" class="btn btn-outline-warning">My Favorites</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5">
        <p class="text-muted">Made with ❤️ by aspiring chefs around the world.</p>
    </footer>
</div>
