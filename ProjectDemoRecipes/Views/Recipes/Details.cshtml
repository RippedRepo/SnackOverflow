@model ProjectDemoRecipes.Models.Recipe

@{
    ViewData["Title"] = "Recipe Details";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@Model.Title</h1>

    <div class="card">
        <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Title" />
        <div class="card-body">
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            <p class="card-text"><strong>Cooking Time:</strong> @Model.CookingTime mins</p>
            <p class="card-text"><strong>Vegetarian:</strong> @(Model.IsVegetarian ? "Yes" : "No")</p>
            <p class="card-text"><strong>Lactose-Free:</strong> @(Model.IsLactoseFree ? "Yes" : "No")</p>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-primary mt-3">Back to List</a>
</div>
