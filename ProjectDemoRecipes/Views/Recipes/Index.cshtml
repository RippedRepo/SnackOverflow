@model IEnumerable<ProjectDemoRecipes.Models.Recipe>

@{
    ViewData["Title"] = "Recipe List";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Recipes</h1>

    <form method="get" class="row mb-4">
        <div class="col-md-6">
            <input type="text" name="searchQuery" class="form-control" placeholder="Search for recipes..." />
        </div>
        <div class="col-md-2">
            <div class="form-check">
                <input type="checkbox" name="isVegetarian" value="true" class="form-check-input" id="isVegetarian" />
                <label for="isVegetarian" class="form-check-label">Vegetarian</label>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-check">
                <input type="checkbox" name="isLactoseFree" value="true" class="form-check-input" id="isLactoseFree" />
                <label for="isLactoseFree" class="form-check-label">Lactose-Free</label>
            </div>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Cooking Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model)
            {
                <tr>
                    <td>@recipe.Title</td>
                    <td>@recipe.Description</td>
                    <td>@recipe.CookingTime mins</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@recipe.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
