@model ProjectDemoRecipes.Models.Recipe

@{
    ViewData["Title"] = "Edit Recipe";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Edit Recipe</h1>

    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="CookingTime" class="form-label"></label>
            <input asp-for="CookingTime" type="number" class="form-control" />
        </div>
        <div class="form-check">
            <input asp-for="IsVegetarian" type="checkbox" class="form-check-input" id="isVegetarian" />
            <label asp-for="IsVegetarian" class="form-check-label" for="isVegetarian"></label>
        </div>
        <div class="form-check">
            <input asp-for="IsLactoseFree" type="checkbox" class="form-check-input" id="isLactoseFree" />
            <label asp-for="IsLactoseFree" class="form-check-label" for="isLactoseFree"></label>
        </div>
        <div class="form-group">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success mt-3">Save</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
