@model ProjectDemoRecipes.Models.Recipe

<h2>Edit Recipe</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CookingTime"></label>
        <input asp-for="CookingTime" type="text" class="form-control" />
        <span asp-validation-for="CookingTime" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="IsVegetarian" class="form-check-input" type="checkbox" />
        <label asp-for="IsVegetarian" class="form-check-label">Vegetarian</label>
    </div>
    <div class="form-check">
        <input asp-for="IsLactoseFree" class="form-check-input" type="checkbox" />
        <label asp-for="IsLactoseFree" class="form-check-label">Lactose-Free</label>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
