@model ProjectDemoRecipes.Models.Recipe

@{
    ViewData["Title"] = "Delete Recipe";
}

<div class="container mt-4">
    <h1 class="text-center text-danger">Delete Recipe</h1>

    <p class="text-center">Are you sure you want to delete the following recipe?</p>

    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            <p class="card-text"><strong>Cooking Time:</strong> @Model.CookingTime mins</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4 text-center">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
